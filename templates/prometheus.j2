  apiVersion: v1
  kind: PersistentVolume
  metadata:
    name: '{{ volume }}'
    labels:
       storage: '{{ volume }}'
  spec:
    capacity:
        storage: 10Gi
    accessModes:
       - ReadWriteOnce
    nfs:
        path: /srv/nfs/{{ volume}},
        server: support1.{{ GUID }}.internal
    persistentVolumeReclaimPolicy: Recycle
